.sidebar
	&--card
		&_uikit
			height 8rem
	&--header
		background-image linear-gradient(90deg, green1 80%, #0e8628 100%)
		height 82px	
		position fixed
		& .media
			& span[class^="icon-"]	
				align-items center
				background-color green4
				border-radius 100%
				color white
				font-size 1rem
				display flex
				justify-content center
				height 35px
				width 35px
			& .dropdown
				& .dropdown-menu
					background #FFFFFF
					border 0
					box-shadow -4px 5px 11px 0 rgba(221,221,221,0.50)
					padding-left .5em
					padding-right .5em
					min-width 100%
					margin-top 1.7rem
					left -4rem
					top 2rem
					&.show
						&:before
							background-color white
							bottom 2.3rem
							border-radius 3px
							content ""
							left 23px
							height 25px
							position absolute
							transform rotate(45deg)
							width 25px
		& a.dropdown-toggle
			display flex
			font-size 0.8125rem
			&:after
				color white
				margin-top 8px
			&:hover, &:focus, &:active, &.active
				color white	
		& a.dropdown-toggle_media
			&:after
				margin-top 15px										

	&--footer
		background-color:  white
	&--menuFloatR
		position fixed
		top 0
		right 0
		z-index 9999
	&--slide
		position fixed
		height 100%
		top 0
		width 100%
		&:before
			background-color rgba(0,0,0,.4)
			content ""
			left 0
			height 100%
			position absolute
			width 100%
		&_right
			right -100%
			z-index 10000
			&.open
				right 0
		&_nav
			&:before
				background-color transparent
			&-left 
				left 0
				width auto
				&.open
					z-index 2
		&_btnGroup
			display none
			left 0
			transition all 0.3s ease
			&.open
				display block
		&_modal
			display none
			left 0
			transition all 0.3s ease
			z-index 1031
			&.open
				display block
	&--panel
		&_left
			box-shadow 0 0 10px 0 rgba(32,129,74,0.05)
			display flex
			height 100%
			margin-top 5.7rem
			&-menu
				box-shadow 0 2px 4px 0 rgba(0,0,0,0.05)
				top 0
				width 96px
			&-form
				border-left 1px solid gray3
				box-shadow 0 0 10px 0 rgba(32,129,74,0.05)
				height 100%
				left -20rem
				position fixed
				transition all 0.3s ease
				width 20rem
				&.open
					left 95px
					margin-top 5.7rem
					top 0
	&--media
		&_portafolio
			align-items center
			border-radius 5px
			& figure
				& span
					color rgba(0,0,0,0.23)
					font-size 4.5rem
		&_pasos
			& h2
				align-items center
				display flex
				height 34px 
				justify-content center
				width 34px
			&.active
				& .border
					background-color white
					border-color green1 !important 
				& h2
					color green1
				& h3
					color green1
				& hr
					border-color green1 !important
			&.disabled
				& .border
					background-color gray3
					border-color gray3 !important
				& h2
					color white
				& h3
					color gray3
				& hr
					border-color gray3 !important	
			&.current
				& .border
					background-color orange1
					border-color orange1 !important
				& h2
					color white
				& h3
					color orange1
				& hr
					border-color orange1 !important						

	&--tableScroll
		overflow-x scroll
		width 100%
		& .cards--panel_facturacion
			width 120%
			& .cards--panel_facturacion
				width 100%
	&--dataTable
		& .dataTables_filter
			display none